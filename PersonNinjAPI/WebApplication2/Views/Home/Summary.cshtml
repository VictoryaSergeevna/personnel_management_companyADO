@using WebApplication2.Models
@model IEnumerable<Person>

<div class="card-header">
    Список сотрудников
</div>
<div class="card-body">
    <table class="table table-striped table-sm">
        <thead>
            <tr> <th>Id</th><th>ФИО</th><th>Возраст</th><th>Семейное положение</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (Person person in Model)
            {
                <tr>
                    <td>@person.Id</td>
                    <td>@person.Name</td>
                    <td>@person.Age</td>
                    <td>@person.Married</td>
                    <td>
                        @Html.ActionLink("Удалить", "Delete", new {id=person.Id },new {@class ="btn btn-primary"
                })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

